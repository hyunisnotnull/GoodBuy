<% if (newUser) { %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      window.onload = function() {  
        Swal.fire({
            title: '회원가입 완료!',
            text: '회원가입이 완료되었습니다. 새로 로그인해주세요.',
            icon: 'success',
            confirmButtonText: '확인'
        }).then(() => {
            window.location.href = '/user/sign_in_form'; 
        });
      };
    </script>
<% } %>
